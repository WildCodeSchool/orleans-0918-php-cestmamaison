<form method="post" class="col-6 justify-content-center" enctype="multipart/form-data">
    <div class="form-group">
        <input type="hidden" value="{{ brand.id }}" name="id">
        <label for="name">Nom : </label>
        <input type="text" class="form-control" value="{{ brand.name }}" id="name" name="name" placeholder="Doudou">
        <div class="row justify-content-start">
            <div class="col-5 btn-file">
                <label for="fichier">Ajouter un fichier : </label>
                <input type="file" name="fichier"/>
            </div>
        </div>
        <div class="row justify-content-end">
            <div class="col-2">
                <button type="submit" class="btn btn-success">Valider</button>
            </div>
        </div>
    </div>
</form>
